<resources>

    <style name="Base.Theme.CritiCine" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/backgroundColor</item>
        <item name="android:colorPrimary">@color/primary_color</item>
    </style>

    <style name="Theme.CritiCine" parent="Base.Theme.CritiCine">
        <item name="android:statusBarColor">#1C1A29</item>
    </style>

    <style name="MyCustomButton" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selected_button_background_color</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/app_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_side_margin</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MyEditField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextTextColor">@color/bottomNavBarSelected</item>
        <item name="android:layout_marginStart">@dimen/app_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_side_margin</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="cursorColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="smallHeadings" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="FontTabLayoutTitle" parent="Widget.MaterialComponents.TabLayout">
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="CriticineSplash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash_image
        </item>
        <item name="android:statusBarColor">#1C1A29</item>
    </style>
</resources>